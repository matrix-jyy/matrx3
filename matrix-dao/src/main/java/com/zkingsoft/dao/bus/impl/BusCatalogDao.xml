		INSERT INTO bus_catalog (
			cata_id,
			cata_name,
			cata_type,
			cata_icon,
			cata_company_id,
			parent_id,
			cata_info1,
			cata_info2,
			cata_info3,
			cata_info4,
			cata_sequnce
		)
	VALUES (
			#{cataId},
			#{cataName},
			#{cataType},
			#{cataIcon},
			#{cataCompanyId},
			#{parentId},
			#{cataInfo1},
			#{cataInfo2},
			#{cataInfo3},
			#{cataInfo4},
			#{cataSequnce}
